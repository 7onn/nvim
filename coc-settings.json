{
    "coc.preferences.jumpCommand": "vsplit",
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": ["serve"],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        },
        "go": {
          "command": "gopls",
          "rootPatterns": ["go.mod"],
          "trace.server": "verbose",
          "filetypes": ["go"]
        },
        "python": {
          "command": "pyright-langserver",
          "filetypes": ["python"]"
        }
    }
}
